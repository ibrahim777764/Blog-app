<h1 class="descriptive-title">Here is a specific post for a given user<h1>
<div class="post-card">
<span><%= @post.title  %></span><span> by </span><span><%= @post.user.name  %></span>
<br>
<span class="counter-card">
<span>Comments: <%= @post.comments_counter %></span>
<span>, Likes: <%= @post.likes_counter %></span>
</span>
<br>
<p><%= @post.text %></p>
</div>
<div class="comment-card">
<% @post.comments.includes(:user).each do |comment| %>
    <span><%= comment.user.name %>:</span>
    <span><%= comment.text%></span>
    <br>
<% end %>

</div>


<div class="like-div">
<button><%= link_to  "Create new Comment", new_user_comment_path(@post.user, @post)  %></button>
<%= render partial: 'likes/form' %>

</div>